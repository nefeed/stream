<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:dubbo="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!-- 增加引用远程服务配置 -->
    <dubbo:reference id="helloWorldService" class="io.nefeed.stream.service.HelloWorldService"/>
    <!-- 和本地服务一样使用远程服务 -->
    <bean id="helloWorldAction" class="io.nefeed.stream.action.HelloWorldAction">
        <property name="helloWorldService" ref="helloWorldService" />
    </bean>

</beans>